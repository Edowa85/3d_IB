<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>3Dcard - Social Icebreaker</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- ============================
       NAVIGATION BAR
       ============================ -->
  <nav aria-label="Menu" class="menu">
    <input type="checkbox" id="checkbox1" class="checkbox1">
    <label for="checkbox1">
      <div class="button button1">
        <span class="bar bar1"></span>
        <span class="bar bar2"></span>
        <span class="bar bar3"></span>
      </div>
    </label>

    <ul class="menu-list">
      <li><a href="/">Home</a></li>
      <% if (user) { %>
        <li><a href="/questions">Questions</a></li>
        <li><a href="/logout">Log out</a></li>
      <% } else { %>
        <li><a href="/login">Log in</a></li>
        <li><a href="/signup">Sign up</a></li>
      <% } %>
      <li><a href="/documentation">Documentation</a></li>
    </ul>
  </nav>

  <!-- ============================
       MAIN CONTENT
       ============================ -->
  <main>
    <section class="page-section active">
      <% if (!user) { %>
        <!-- Welcome message for non-logged users -->
        <div class="welcome-container">
          <h1>Welcome to 3Dcard</h1>
          <p class="subtitle">Break the ice with style</p>
          <p class="description">The interactive 3D card that helps you start conversations.</p>
          <p class="instruction">Please log in or sign up using the navigation menu above.</p>
        </div>
      <% } else { %>
        <!-- 3D Card Container -->
        <div id="card-container">
          <!-- Three.js canvas will be inserted here -->
        </div>
      <% } %>
    </section>
  </main>

  <% if (user) { %>
  <!-- Three.js CDN -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>

  <!-- Custom Scripts -->
  <script>
    // Pass questions to frontend
    window.userQuestions = <%- JSON.stringify(questions) %>;
    window.userId = '<%- user._id %>';
  </script>
  <script src="/js/card.js"></script>
  <% } %>

  <script>
    // Navigation handling
    const menu = document.querySelector('.menu');
    const menuList = document.querySelector('.menu-list');
    const menuToggle = document.querySelector('.menu .button');

    menuToggle.addEventListener('click', function() {
      menu.classList.toggle('active');
      menuList.classList.toggle('active');
    });
  </script>
</body>
</html>
